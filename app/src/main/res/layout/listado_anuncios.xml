<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="16dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="16dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        cardBackgroundColor="@color/colorPrimary"
        android:paddingBottom="5dp"
        android:clipToPadding="false"
        android:layout_gravity="center"
        card_view:cardCornerRadius="30px"
        >

        <LinearLayout
            android:id="@+id/linearLayoutCardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:id="@+id/txtNombreAnuncio"
                android:textAlignment="center"
                android:layout_weight="1"
                android:background="@layout/linea"
                android:gravity="center_vertical"
                android:text="Nombre del Anuncio"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="25dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="10dp"
                    android:adjustViewBounds="true"
                    android:id="@+id/imgUrlAnuncio"
                    android:layout_marginLeft="8dp"
                    android:contentDescription="@string/nombre"
                    android:src="@drawable/olinguito" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/txtIdNegoAnuncio"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Id"
                    android:visibility="gone"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="VALIDO DESDE"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtFechaInicioAnuncio"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="2018-03-20"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                       <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="VIGENCIA"
                           android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtFechaFinAnuncio"
                            android:layout_weight="1"
                            android:text="2018-04-20"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                    </LinearLayout>
                    <Button
                        android:background="@drawable/btn_contorno"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Consultar Detalles"
                        android:id="@+id/btnDetalesAnuncio"

                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>